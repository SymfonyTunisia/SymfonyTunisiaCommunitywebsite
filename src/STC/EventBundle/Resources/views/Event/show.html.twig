<!-- Portfolio -->
<div class="portfolio portfolio-page container events">
    <div class="row">
        <div class="portfolio-navigator span12">
            {% media entity.image, 'wide' with {'alt': entity.title,'title': entity.title } %}
            <h4>{{ entity.title }}</h4>
            <h5>Lieu : <span class="red">{{ entity.location }}</span></h5>
            <h5>Date : <span class="red">{{ entity.date | format_date('dd M yyyy') }}</span></h5>
            <h5>Heure : <span class="red">{{ entity.startDate | format_date('HH:m') }}</span> à
                <span class="red">{{ entity.endDate | format_date('HH:m') }}</span>
            </h5>

            <p>&nbsp;</p>
            {{ entity.content|raw }}
        </div>
    </div>
    <div class="galery row">
        <ul class="portfolio-img">
            {% if entity.images %}
                {% for key,galEvent in entity.images.galleryHasMedias %}
                    <li class="span4" data-type="web-design" data-id="p-1">
                        {% if key >= 0 %}
                            <a alt="{{ galEvent.media.name }}" title="{{ entity.title }}">
                                {% media galEvent.media, 'show' with {'title' : entity.title , 'alt': entity.title } %}
                            </a>
                        {% endif %}
                    </li>
                {% endfor %}
            {% endif %}
        </ul>
