{% extends sonata_block.templates.block_base %}

{% block block %}
    <div class="container">
        <div class="header row">
            <div class="span12">
                <div class="navbar">
                    <div class="navbar-inner">
                        <a data-target=".nav-collapse" data-toggle="collapse" class="btn btn-navbar">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </a>

                        <h1>
                            <a class="brand" href="{{ path('home') }}">
                                <img alt="Symfony Tunisia Community" width="250" height="60"
                                     src="{{ asset('bundles/stcsite/img/logo.png') }}">
                            </a>
                        </h1>

                        <div class="nav-collapse collapse">
                            <ul class="nav pull-right">
                                <li {% if app.request.get('_route') == 'home' %} class="current-page" {% endif %}>
                                    <a href="{{ path('home') }}">
                                        <i class="icon-home"></i><br/>
                                        Accueil
                                    </a>
                                </li>
                                <li {% if app.request.get('_route') == 'whoWeAre' %} class="current-page" {% endif %}>
                                    <a href="{{ path('whoWeAre') }}">
                                        <i class="icon-user"></i><br/>
                                        Qui sommes-nous
                                    </a>
                                </li>
                                <li {% if app.request.get('_route') == 'symfony_planning' %} class="current-page" {% endif %}>
                                    <a href="{{ path('symfony_planning') }}">
                                        <i class="icon-tasks"></i><br/>
                                        Planning</a>
                                </li>
                                <li {% if app.request.get('_route') in ['symfony_workshop'] %} class="current-page" {% endif %}>
                                    <a href="{{ path('symfony_workshop') }}">
                                        <i class="icon-calendar"></i><br/>
                                        Formations
                                    </a>
                                </li>
                                <li {% if app.request.get('_route') in ['symfony_sponsor'] %} class="current-page" {% endif %}>
                                    <a href="{{ path('symfony_sponsor') }}">
                                        <i class="icon-file"></i><br/>
                                        Sponsors
                                    </a>
                                </li>
                                <li {% if app.request.get('_route') == 'contact' %} class="current-page" {% endif %}>
                                    <a href="{{ path('contact') }}">
                                        <i class="icon-envelope-alt">
                                        </i><br/>Contact
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
